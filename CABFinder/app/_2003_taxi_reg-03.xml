<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>  
      <TabEntry title="REGISTRATION | Black Cab">
        <TabEntry.view>
          <StackLayout cssClass="tab-content">
              <Label text="ADDRESS PLEASE" cssClass="title"/>
              <TextField hint="Postcode" />
              <TextField hint="House/Flat Number" />
              <TextField hint="Address Line-1" />
              <TextField hint="Address Line-2" />
              <TextField hint="PIN 4-digits" />
              <TextField hint="Repeat PIN" />
             <Button text="SAVE & NEXT" tap="buttonTap" />
          </StackLayout>
        </TabEntry.view>
      </TabEntry>
    </TabView.items>
  </TabView>
</Page>